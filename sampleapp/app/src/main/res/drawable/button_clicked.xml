<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">

            <solid android:width="1dp" android:color="@color/worldPay_green"></solid>
            <stroke android:width="1dp" android:color="@color/worldPay_green"></stroke>
            <corners android:radius="1dp"></corners>

        </shape>
    </item>
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">

            <solid android:width="1dp" android:color="@color/white"></solid>
            <stroke android:width="1dp" android:color="@color/white"></stroke>
            <corners android:radius="1dp"></corners>

        </shape>
    </item>
</selector>