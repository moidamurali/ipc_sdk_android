<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/text_size10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="100">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="50"
                android:orientation="vertical">

                <com.worldpay.library.views.WPTextView
                    style="@style/noBoldText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Payment Id" />

                <com.worldpay.library.views.WPTextView
                    android:id="@+id/payment_id"
                    style="@style/TextBold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="Payment ID"
                    android:textSize="20dp" />
            </LinearLayout>

            <Button
                android:id="@+id/btn_edit"
                style="@style/buttonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="25"
                android:drawableStart="@mipmap/ic_edit"
                android:gravity="center"
                android:padding="5dp"
                android:text="Edit"
                android:textSize="@dimen/text_size13" />

            <Button
                android:id="@+id/btn_delete"
                style="@style/buttonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_weight="25"
                android:drawableStart="@mipmap/ic_delete"
                android:gravity="center"
                android:padding="5dp"
                android:text="Delete"
                android:textSize="@dimen/text_size13" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.worldpay.library.views.WPTextView
                android:id="@+id/WPTextView"
                style="@style/noBoldText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Card Number" />

            <com.worldpay.library.views.WPTextView
                android:id="@+id/card_no"
                style="@style/noBoldText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1234 5678 9012 3456"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.worldpay.library.views.WPTextView
                style="@style/noBoldText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Expiration Date" />

            <com.worldpay.library.views.WPTextView
                android:id="@+id/expiration_date"
                style="@style/noBoldText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1111 1111 1111 1111"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.worldpay.library.views.WPTextView
                style="@style/noBoldText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pin Block" />

            <com.worldpay.library.views.WPTextView
                android:id="@+id/pin_block"
                style="@style/noBoldText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1001"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>