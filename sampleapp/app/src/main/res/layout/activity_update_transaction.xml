<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/text_size5">

        <com.worldpay.library.views.WPFormEditText
            android:id="@+id/transaction_id"
            style="@style/noBoldText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_size5"
            android:hint="Transaction ID"
            android:imeOptions="actionNext"
            android:inputType="number" />

        <com.worldpay.library.views.WPFormEditText
            android:id="@+id/fld_order_date"
            style="@style/noBoldText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:cursorVisible="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:hint="Order Date (MM/DD/YYYY)"
            android:imeOptions="actionNext" />


        <com.worldpay.library.views.WPFormEditText
            android:id="@+id/duty_amount"
            style="@style/noBoldText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_size5"
            android:hint="Duty Amount"
            android:imeOptions="actionNext"
            android:inputType="number" />

        <com.worldpay.library.views.WPFormEditText
            android:id="@+id/freight_amount"
            style="@style/noBoldText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_size5"
            android:hint="Freight Amount"
            android:imeOptions="actionNext"
            android:inputType="number" />

        <com.worldpay.library.views.WPFormEditText
            android:id="@+id/retail_lane_no"
            style="@style/noBoldText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_size5"
            android:hint="Retail Lane Number"
            android:imeOptions="actionNext"
            android:inputType="number" />

        <com.worldpay.library.views.WPFormEditText
            android:id="@+id/tax_amount"
            style="@style/noBoldText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_size5"
            android:hint="Tax Amount"
            android:imeOptions="actionNext"
            android:inputType="number" />

        <com.worldpay.library.views.WPTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/text_size5"
            android:layout_marginRight="@dimen/text_size5"
            android:layout_marginTop="@dimen/text_size5"
            android:text="Tax Status" />

        <com.worldpay.library.views.WPSimpleFormSpinner
            android:id="@+id/tax_status"
            style="@style/noBoldText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_size5"
            android:hint="Tax Status"
            android:imeOptions="actionNext"
            android:inputType="text" />

        <com.worldpay.library.views.WPFormEditText
            android:id="@+id/purchase_order_no"
            style="@style/noBoldText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_size5"
            android:hint="PO Number"
            android:imeOptions="actionNext"
            android:inputType="number" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_update_transaction"
        style="@style/buttonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/text_size10"
        android:drawableLeft="@mipmap/ic_update"
        android:padding="10dp"
        android:text="@string/update" />
</LinearLayout>