<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:orientation="vertical"
        android:padding="@dimen/activity_margin">

        <LinearLayout
            android:layout_width="356dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="100">

            <com.worldpay.library.views.WPTextView
                android:id="@+id/card"
                style="@style/TextBold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_weight="33.33"
                android:text="Check # "
                android:textSize="30dp" />

            <Button
                android:id="@+id/btn_edit"
                style="@style/buttonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center_horizontal"
                android:layout_margin="5dp"
                android:layout_weight="33.33"
                android:drawableLeft="@mipmap/ic_done"
                android:padding="10dp"
                android:text="Edit" />

            <Button
                android:id="@+id/btn_delete"
                style="@style/buttonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center_horizontal"
                android:layout_margin="5dp"
                android:layout_weight="33.33"
                android:drawableLeft="@mipmap/ic_cancel"
                android:padding="10dp"
                android:text="Delete" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.worldpay.library.views.WPTextView
                android:id="@+id/WPTextView"
                style="@style/noBoldText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Account Number" />

            <com.worldpay.library.views.WPTextView
                android:id="@+id/tv_account_no"
                style="@style/noBoldText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1234 5678 9012 3456"
                android:textSize="26dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.worldpay.library.views.WPTextView
                style="@style/noBoldText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Routing Number" />

            <com.worldpay.library.views.WPTextView
                android:id="@+id/tv_routing_number"
                style="@style/noBoldText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1111 1111 1111 1111"
                android:textSize="26dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.worldpay.library.views.WPTextView
                style="@style/noBoldText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Check Number" />

            <com.worldpay.library.views.WPTextView
                android:id="@+id/tv_check_number"
                style="@style/noBoldText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1001"
                android:textSize="26dp" />
        </LinearLayout>

    </LinearLayout>


</RelativeLayout>